---
// 可以在这里验证支付状态
const sessionId = Astro.url.searchParams.get("session_id");
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Payment Successful - Easy AI Apps</title>
  </head>
  <body>
    <div
      class="min-h-screen bg-gray-50 flex flex-col justify-center items-center"
    >
      <div
        class="max-w-md w-full bg-white rounded-lg shadow-lg p-8 text-center"
      >
        <div class="text-green-500 text-6xl mb-4">✓</div>
        <h1 class="text-2xl font-bold text-gray-900 mb-4">
          Payment Successful!
        </h1>
        <p class="text-gray-600 mb-6">
          Thank you for your subscription. You should receive a confirmation
          email shortly.
        </p>
        {
          sessionId && (
            <p class="text-sm text-gray-500 mb-6">Session ID: {sessionId}</p>
          )
        }
        <div class="space-y-3">
          <a
            href="/dashboard"
            class="block w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 transition-colors"
          >
            Go to Dashboard
          </a>
          <a
            href="/"
            class="block w-full bg-gray-200 text-gray-800 py-2 px-4 rounded-md hover:bg-gray-300 transition-colors"
          >
            Back to Home
          </a>
        </div>
      </div>
    </div>
  </body>
</html>

