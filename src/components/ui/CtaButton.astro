---
const { href, variant = 'primary' } = Astro.props as { href: string; variant: 'primary' | 'secondary' };

const baseStyles = "px-6 py-3 rounded-lg font-medium transition-all duration-200 inline-flex items-center";
const variants = {
  primary: "bg-primary hover:bg-primary/90 text-white",
  secondary: "bg-secondary hover:bg-secondary/90 text-white"
};
---

<a href={href} class={`${baseStyles} ${variants[variant]}`}>
  <slot />
</a>